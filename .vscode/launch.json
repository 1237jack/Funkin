{
  "version": "0.2.0",
  "configurations": [
    {
			// Launch in browser
      "name": "HTML5 Debug",
      "type": "chrome",
      "request": "launch",
      "url": "http://127.0.0.1:3001",
      "sourceMaps": true,
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "debug: html"
    },
    {
			// Launch in native/CPP
      "name": "Lime",
      "type": "lime",
      "request": "launch"
    },
    {
			// Evaluate macros with debugging enabled
      "name": "Haxe Eval",
      "type": "haxe-eval",
      "request": "launch"
    }
  ]
}
